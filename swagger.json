  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "paths": {
    "/properties": {
      "get": {
        "tags": [
          "properties"
        ],
        "summary": "Get properties",
        "description": "Returns the properties(hotel) around Lat/Lon",
        "operationId": "getProperties",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "lat",
            "description": "Latitude",
            "required": true,
            "type": "number"
          },
          {
            "in": "query",
            "name": "lon",
            "description": "Longitude",
            "required": true,
            "type": "number"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/PropertyDtoList"
            }
          },
          "400": {
            "description": "Bad request"
          }
        },
        "security": []
      }
    },
    "/bookings": {
      "post": {
        "tags": [
          "bookings"
        ],
        "summary": "Book property",
        "description": "Book a property",
        "operationId": "bookProperty",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Booking payload",
            "required": true,
            "schema": {
              "$ref": "#/definitions/BookingRequestDto"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/BookingDto"
            }
          },
          "400": {
            "description": "Bad request"
          },
          "404": {
            "description": "Property not found"
          }
        },
        "security": [
        ]
      }
    },
    "/properties/{id}/bookings": {
      "get": {
        "tags": [
          "properties"
        ],
        "summary": "Get property bookings",
        "description": "Get all bookings for a property",
        "operationId": "getPropertyBookings",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "property unique identifier",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/BookingDtoList"
            }
          },
          "400": {
            "description": "Bad request"
          },
          "404": {
            "description": "Property not found"
          }
        },
        "security": []
      }
    }
  },
  "securityDefinitions": {
  },
  "definitions": {
    "PropertyDto": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "unique identifier"
        },
        "title": {
          "type": "string",
          "description": "property name"
        }
      }
    },
    "PropertyDtoList": {
      "type": "object",
      "properties": {
        "properties": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/PropertyDto"
          }
        }
      }
    },
    "BookingDto": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Booking ID"
        },
        "propertyId": {
          "type": "string",
          "description": "Property ID"
        },
        "ownerId": {
          "type": "string",
          "format": "uuid",
          "description": "Owner ID"
        }
      }
    },
    "BookingDtoList": {
      "type": "object",
      "properties": {
        "bookings": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/BookingDto"
          }
        }
      }
    },
    "BookingRequestDto": {
      "type": "object",
      "properties": {
        "propertyId": {
          "type": "string",
          "description": "Property ID"
        },
        "ownerId": {
          "type": "string",
          "format": "uuid",
          "description": "Owner ID"
        }
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about Limehome",
    "url": "https://www.limehome.com/"
  }
}
